<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado da simulação"
                    android:textColor="#676767"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/valor_bruto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 9,999.99"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="60dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="241dp"
                        android:layout_height="wrap_content"
                        android:text="Rendimento total de "
                        android:textAlignment="textEnd"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/rendimento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="R$ 999.99"
                        android:textAlignment="textStart"
                        android:textColor="#00C8B3"
                        android:textSize="15dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textview"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Valor aplicado inicialmente "
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/inicial"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="R$ 999.99"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Valor bruto do investimento "
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/valor_bruto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="R$ 999.99"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Valor do rendimento"
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/rendimento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="R$ 999.99"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="IR sobre o investimento"
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/ir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="R$ 999.99 (99.9%)"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Valor liquido de investimento "
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/valor_liquido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="R$ 999.99"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="Data de resgate"
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="99/99/9999"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Dias corridos "
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/dias_corridos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="999"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Rendimento mensal "
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/rendimento_mensal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="9.99%"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="267dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Percentual do CDI do investimento "
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="999%"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Rentabilidade anual "
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/rentabilidade_anual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="9,99%"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Rentabilidade no periodo. "
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/rentabilidade_periodo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:text="9,99%"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_firstscreen"
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00C8B3"
                android:paddingLeft="100dp"
                android:paddingTop="15dp"
                android:paddingRight="100dp"
                android:paddingBottom="15dp"
                android:text="Simular novamente"
                app:cornerRadius="90px"></Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>